@model SportEventsApp.ViewModel.EventsDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Event.Name</h2>
<ul>
    <li>Prize 1: @Model.Event.Prize_1</li>
    <li>Prize 2: @Model.Event.Prize_2</li>
    <li>Prize 3: @Model.Event.Prize_3</li>
    @{ 
    for (int i = 0; i < Model.Event.Stores.Count; i++)
    {
        <li>Store @(i+1): @Model.Event.Stores[i].StoreName</li>
    }
    }
    <li>Start: @Model.Event.Start.Value.ToLongDateString()</li>
    <li>End: @Model.Event.End.Value.ToLongDateString()</li>
    <li>From: @Model.Event.From.ToString()</li>
    <li>To: @Model.Event.To.ToString()</li>

    <li>EntryFees: @Model.Event.Entry_Fees</li>
    <li>No Of Players: @Model.Event.No_Of_Players</li>
    <li>Match Duration: @Model.Event.MatchDuration</li>
</ul>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Event.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<table id="groups" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>

            <th>
                User Count
            </th>
            <th>
                Event Name
            </th>
            <th>Operation</th>

        </tr>
    </thead>
    <tbody></tbody>

</table>



<div class="container">
    @Html.Partial("_UserTournament", Model.Tours)
</div>
@section scripts{

    <script>
        $(document).ready(function () {
            var table = $("#groups").DataTable({
                ajax: {
                    url: "/api/EventGroups/@Model.Event.Id",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Name",
                        render: function (data, type, group) {
                            return "<a href='/Groups/edit/" + group.id + "'>" + group.name + "</a>"
                        }
                    },
                    {
                        data: "eventUsers",
                        render: function (u) {
                            return u.length
                        }
                    },
                    {
                        data: "event.name",
                        render: function (u) {
                            return u ? u : 'N/A'
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-danger btn-xs js-delete' data-customer-id=" + data + ">Delete</button> | <a class='btn btn-primary btn-xs' href='/Groups/Details/" + data + "'>Details</a>";
                        }
                    },

                ]
            });

            $("#groups").on("click", ".js-delete", function () {
                var delbutton = $(this);
                bootbox.confirm("Are You Sure To Delete This Group?!", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Groups/" + delbutton.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(delbutton.parents("tr")).remove().draw();
                            },
                            error: function () {

                            }


                        });

                    }


                })

            });

        });

    </script>
}