@model SportEventsApp.ViewModel.RegularInfoViewModel

@if (Model.Id > 0)
{
    <h2>Edit</h2>
}
else
{
    <h2>New</h2>
}


@using (Html.BeginForm("SaveSimple", "Info", FormMethod.Post, new { id = "form-simpleInfo" }))
{
    @Html.ValidationSummary(true, "Invalid Data")
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            <span class="field-validation-error" id="validationSpan"></span>
        </div>
    </div>


    if (ViewBag.complex != null)
    {


            <div class="row">
                <div class="form-group">
                    <label for="ComplexId">Add To Complex</label>
                    @Html.DropDownListFor(cc => cc.ComplexId, new SelectList(ViewBag.complex, "Id", "Header", Model.ComplexId), "Select Complex List", new { @class = "form-control", @id = "drop" + Model.Id })

                </div>
            </div>
    }

    <div class="row">
        <div id="pointsDiv" class="col-md-6 ">
            <h3>@Html.LabelFor(m => m.Points)</h3>

            <input type="button" value="Add" id="btnPoints" class="btn btn-primary cash-btn" />
            <br />
            @for (int i = 0; i < Model.Points.Count; i++)
            {
                <div class="form-group">
                    <input type="text" name="Points" class="form-control" value="@Model.Points[i]" />

                </div>
            }
        </div>

    </div>

                    @Html.HiddenFor(m => m.Id)
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="form-group col-md-4">

                            <input type="button" value="Back" id="btnPointsBack" class="btn btn-default" />
                        </div>
                        <div class="form-group col-md-4">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                        <div class="form-group col-md-4">
                            <button class="btn btn-danger  js-delete" data-info-id="@Model.Id">Delete</button>
                        </div>

                    </div>
}

















