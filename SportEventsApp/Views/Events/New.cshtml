@model SportEventsApp.ViewModel.EventsViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.Id > 0)
{
    <h2>Edit Event</h2>
}
else
{
    <h2>New Event</h2>
}

@using (Html.BeginForm("Save", "Events", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Invalid Data")
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Prize_1)
            @Html.TextBoxFor(m => m.Prize_1, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Prize_1)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Prize_2)
            @Html.TextBoxFor(m => m.Prize_2, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Prize_2)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Prize_3)
            @Html.TextBoxFor(m => m.Prize_3, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Prize_3)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Host_1)
            @Html.TextBoxFor(m => m.Host_1, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Host_1)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Host_2)
            @Html.TextBoxFor(m => m.Host_2, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Host_2)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Host_3)
            @Html.TextBoxFor(m => m.Host_3, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Host_3)
        </div>
    </div>

    <div class="row">

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            @Html.ValidationMessageFor(m => m.Date)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Time)
            @Html.TextBoxFor(m => m.Time, new { @class = "form-control", @type = "time" })
            @Html.ValidationMessageFor(m => m.Time)
        </div>


    </div>

    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Entry_Fees)
            @Html.TextBoxFor(m => m.Entry_Fees, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Entry_Fees)
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Location_URL)
            @Html.TextBoxFor(m => m.Location_URL, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Location_URL)
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.No_Of_Players)
            @Html.TextBoxFor(m => m.No_Of_Players, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.No_Of_Players)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Type)
            @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Type)
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Match_Duration)
            @Html.TextBoxFor(m => m.Match_Duration, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Match_Duration)
        </div>

    </div>
    <div class="row">
        <div id="vodafoneDiv" class="col-md-6 ">
            <h3>@Html.LabelFor(m => m.VodafoneCashNumbers)</h3>

            <input value="Add"  id="btnVodafone" class="btn btn-success cash-btn" />
            <br />
            @for (int i = 0; i < Model.VodafoneCashNumbers.Count; i++)
            {
                <div class="form-group">
                    <input type="text" name="VodafoneCashNumbers" pattern="010[0-9]{8}" title="Not a vodafone Number" class="form-control" value="@Model.VodafoneCashNumbers[i]" />
                    @Html.ValidationMessageFor(m => m.VodafoneCashNumbers)
                </div>
            }
        </div>

        <div id="eticalatDiv" class="col-md-6">
            <h3>@Html.LabelFor(m => m.EtisalatCashNumbers)</h3>
            <input value="Add" id="btnEtisalat" class="btn btn-success cash-btn" />
            @for (int i = 0; i < Model.EtisalatCashNumbers.Count; i++)
            {
                <div class="form-group">
                    <input type="text" name="EtisalatCashNumbers" pattern="011[0-9]{8}" title="Not a Etisalat Number" class="form-control" value="@Model.EtisalatCashNumbers[i]" />
                    @Html.ValidationMessageFor(m => m.EtisalatCashNumbers)
                </div>
            }
        </div>
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-6">
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default col-md-6" })
        </div>
        <div class="form-group col-md-6">
            <input type="submit" value="Save" class="btn btn-success col-md-6" />
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {
            $("#btnVodafone").on("click", function () {
                $("#vodafoneDiv").append('<div class="form-group"><input type="text" name="VodafoneCashNumbers" pattern="010[0-9]{8}" title="Not a vodafone Number" class="form-control" value="" />@Html.ValidationMessageFor(m => m.VodafoneCashNumbers)</div>')
            });
            $("#btnEtisalat").on("click", function () {
                $("#eticalatDiv").append('<div class="form-group"><input type="text" name="EtisalatCashNumbers" pattern="011[0-9]{8}" title="Not a Etisalat Number" class="form-control" value="" />@Html.ValidationMessageFor(m => m.EtisalatCashNumbers)</div>')
            });
        })
    </script>
}